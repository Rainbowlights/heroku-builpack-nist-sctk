#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

indent() {
  sed -u 's/^/       /'
}

cd $BUILD_DIR/vendor/sctk-2.4.10

# make config
echo "-----> Compiling with Make: Config"
make config 2>&1 | indent

echo "-----> make all"
make all 2>&1 | indent

echo "-----> check with make"
#make check 2>&1 | indent

# make install
echo "-----> Installing with Make"
make install 2>&1 | indent


echo 'Permission:'
chmod -R 755 $BUILD_DIR/vendor/sctk-2.4.10/bin/ | indent

echo 'Installing virtualenv'
export PYTHONHOME=/usr/local/lib/python3.6/  | indent
/usr/bin/pyhton3.6 -m venv msenv | indent
echo 'Activate virtualenv'
source msenv/bin/activate | indent
echo 'Installing script python3.6'
cd $BUILD_DIR/lib/msspeech-client
python setup.py install | indent
echo "Deactivate msenv"
deactivate | indent
export PYTHONHOME=/app/.heroku/python | indent
